<% if(success_msg && success_msg != ''){ %>
    <div class="alert alert-success alert-dismissible fade show alert container" id="success-alert">
        <strong>Message:</strong>
        <%= success_msg%>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
<% }else if(error_msg && error_msg != ''){ %>
    <div class="alert alert-danger alert-dismissible fade show alert container" id="danger-alert">
        <strong>Error:</strong>
        <%= error_msg%>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
<% } %>